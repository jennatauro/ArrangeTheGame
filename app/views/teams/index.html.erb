<h1>Listing teams</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Text</th>
    <th colspan="2"></th>
  </tr>
 
<% @teams.each do |team| %>
  <tr>
    <td><%= team.name %></td>
    <td><%= team.text %></td>
    <td><%= link_to 'Show', team_path(team) %></td>
    <td><%= link_to 'Edit', edit_team_path(team) %></td>
    <td><%= link_to 'Destroy', team_path(team),
                    method: :delete, data: { confirm: 'Are you sure?' }%></td>
  </tr>
<% end %>
</table>

<%= link_to 'Register new team', new_team_path %>